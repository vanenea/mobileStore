/* miniprogram/pages/detail/detail.wxss */
page {
  background-color: #F8F8F8;
  height: 100%;
  margin: 0px;
  padding: 0px;
  color: #333;
}
.swiper{
  width: 100%;
  height: 375px;
}
.clear {
  clear: both;
}
.orange {
  margin-bottom: 18px;
}
.goods-header {
  display: block;
  height: auto;
  padding: 10px 0 0;
  -webkit-tap-highlight-color: transparent;
  border-top: 1px solid #f2f2f2;
  background-color: #fff;
  margin-bottom: 10px;
  position: relative;
}
.goods-header .title {
  font-weight: 400;
  color: #333;
  margin: 0;
  padding: 0 10px;
  font-size: 16px;
  line-height: 22px;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
}
.goods-price {
    padding: 10px 10px 2px;
    width: 100%;
}
.current-price {
    color: #f60;
    display: inline-block;
    font-size: 14px;
    float: left;
    width: 50%;
}
.current-price .price {
    font-size: 18px;
}
.original-price {
    font-size: 12px;
    margin: 5px 0 10px;
    display: block;
    text-decoration-line: line-through;
    
}
.old-price, .original-price {
    vertical-align: middle;
    color: #999;
    text-decoration: line-through;
}
.stock-detail {
  width: 100%;
  margin-top: 10px;
  margin-bottom: 10px;
  display: inline-block;
  font-size: 12px;
  zoom: 1;
  color: #999;
  padding: 0px 10px;
}
.threePart{
  float: left;
  width: 33.33%;
}
.tl {
  text-align: left;
}
.tc {
  text-align: center;
}
.tr {
  padding-left: 0px;
  text-align: center;
}
.sku-detail {
  position: relative;
  margin-top: 10px;
  margin-bottom: 10px;
  line-height: 20px;
  font-size: 14px;
  background-color: #fff;
  border-top: 1px solid #f0f0f0;
  border-bottom: 1px solid #f0f0f0;
}
.sku-detail .sku-group {
  position: relative;
  padding-right: 15px;
  margin-right: 10px;
}
.sku-detail .sku-detail-inner {
  padding-left: 10px;
}
.select {
  padding: 10px 0px;
}
.js-sku-label::after {
  content: "";
  position: absolute;
  top: 50%;
  right: 0;
  margin-top: -6px;
  width: 6px;
  height: 12px;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 6px 12px;

}
.renzheng{
  color: #666;
  font-size: 12px;
  float: right;
  width: 50%;
}
.icon-right {
  position: absolute;
  width: 15px;
  height: 15px;
  background-image: url(data:image/png;base64,);
    background-repeat:no-repeat; 
    background-size:100% 100%;
}
.secondPart {
  width: 50%;
  float: left;
  text-align: center;
  line-height: 40px;
  border: 0 none;
  outline: 0 none;
  background-color: #fff;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 14px;
}
.active {
  color: #f44;
  border-bottom: 1px solid #f44;
}
.image-detail {
  width: 100%;
  display: block;
  margin: 0px;
  padding: 0px;
}
.c-img {
    width: 68px;
    height: 68px;
    display: inline-block;
    margin-right: 3px;
    overflow: hidden;
    text-align: center;
    background: #f3f3f3;
    margin-bottom: 1px;
}
.comment-container{
  font-size: 12px;
  word-break: break-all;
  padding: 10px 10px;
  color: #333;
  border-bottom: 1px solid #ddd;
}
.user {
  color: #999;
}
.cmt-user {
 display: block;
 float: left;
}
.date {
 display: block;
 float: right;
}
.comment {
  margin: 5px 0;
}
.c-img {
  min-width: 68px;
  max-height: 68px;

}
.modal-top{
  margin-bottom: 5px;
  border-bottom: 1px solid #e5e5e5;
  padding-bottom:10px;
}
.sku {
    background-color: rgba(0, 0, 0, 0.7);
    height: 100%;
    position: fixed;
    top: 0px;
    left: 0px;
    right: 0px;
    z-index: 1000;
}
.sku-layout-title {
  overflow: hidden;
  position: fixed;
  z-index: 1002;
  background: white;
  bottom: 0px;
  left: 0px;
  right: 0px;
  padding: 10px 10px;
}
.thumb{
  width: 50px;
  height: 50px;
  float: left;
}
.js-goods-thumb {
  width: 100%;
  height: 100%;
}

.sku-layout-title .goods-base-info .title {
  padding-right: 52px;
  margin-bottom: 5px;
  font-size: 14px;
  line-height: 22px;
}
.sku-layout-title .goods-base-info {
  margin-left: 60px;
}
.ellipsis {
  display: block;
  width: 250px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.current-price.pull-left{
  font-size: 14px;
}
.sku-cancel {
  position: absolute;
  right: 0;
  top: 0;
  padding: 10px;
}
.cancel-img {
  height: 22px;
  width: 22px;
  background-image: url(https://www.chenlaoshi.top/upload/images/icon_close.png);
  background-size: 22px 22px;
}

.sku-sel-list-o{
  font-size: 13px;
}
.sku-sel-title{
  margin:7px;
}
.sku-sel-list {
  background-color: #f7f7f7;
  border-radius: 4px;
  padding: 5px 5px;
  margin: 5px;
  text-align: center;
}
.sku-selected {
    background-color: #f44;
    border-color: #f44;
    color: #fff;
}
.ell{
  min-width: 32px;
  max-width: 180px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}