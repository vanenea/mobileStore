/* miniprogram/pages/detail/detail.wxss */
page {
  background-color: #F8F8F8;
  height: 100%;
  margin: 0px;
  padding: 0px;
}
.swiper{
  width: 100%;
  height: 375px;
}

.goods-header {
  display: block;
  height: auto;
  padding: 10px 0 0;
  -webkit-tap-highlight-color: transparent;
  border-top: 1px solid #f2f2f2;
  background-color: #fff;
  margin-bottom: 10px;
  position: relative;
}
.goods-header .title {
  font-weight: 400;
  color: #333;
  margin: 0;
  padding: 0 10px;
  font-size: 16px;
  line-height: 22px;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
}
.goods-price {
    padding: 10px 10px 2px;
    text-align: left;
}
.current-price {
    color: #f60;
    display: inline-block;
    font-size: 14px;
}
.current-price .price {
    font-size: 18px;
}