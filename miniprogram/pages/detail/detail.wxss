/* miniprogram/pages/detail/detail.wxss */
page {
  background-color: #F8F8F8;
  height: 100%;
  margin: 0px;
  padding: 0px;
  color: #333;
}
.swiper{
  width: 100%;
  height: 375px;
}

.goods-header {
  display: block;
  height: auto;
  padding: 10px 0 0;
  -webkit-tap-highlight-color: transparent;
  border-top: 1px solid #f2f2f2;
  background-color: #fff;
  margin-bottom: 10px;
  position: relative;
}
.goods-header .title {
  font-weight: 400;
  color: #333;
  margin: 0;
  padding: 0 10px;
  font-size: 16px;
  line-height: 22px;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
}
.goods-price {
    padding: 10px 10px 2px;
    text-align: left;
}
.current-price {
    color: #f60;
    display: inline-block;
    font-size: 14px;
}
.current-price .price {
    font-size: 18px;
}
.original-price {
    font-size: 12px;
    margin: 5px 0 10px;
    display: block;
    text-decoration-line: line-through;
}
.old-price, .original-price {
    vertical-align: middle;
    color: #999;
    text-decoration: line-through;
}
.stock-detail {
  width: 100%;
  margin-top: 10px;
  margin-bottom: 10px;
  display: inline-block;
  font-size: 12px;
  zoom: 1;
  color: #999;
  padding: 0px 10px;
}
.threePart{
  float: left;
  width: 33.33%;
}
.tl {
  text-align: left;
}
.tc {
  text-align: center;
}
.tr {
  padding-left: 0px;
  text-align: center;
}
.sku-detail {
  position: relative;
  margin-top: 10px;
  margin-bottom: 10px;
  line-height: 20px;
  font-size: 14px;
  background-color: #fff;
  border-top: 1px solid #f0f0f0;
  border-bottom: 1px solid #f0f0f0;
}
.sku-detail .sku-group {
  position: relative;
  padding-right: 15px;
  margin-right: 10px;
}
.sku-detail .sku-detail-inner {
  padding-left: 10px;
}
.select {
  padding: 10px 0px;
}
.js-sku-label::after {
  content: "";
  position: absolute;
  top: 50%;
  right: 0;
  margin-top: -6px;
  width: 6px;
  height: 12px;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 6px 12px;

}
.renzheng{
  color: #666;
  font-size: 12px;
}
.rz-item::before {
  content: "";
  position: absolute;
  top: 50%;
  right: 0;
  margin-top: -6px;
  width: 6px;
  height: 12px;
  background-image: url(data:image/png;base64,);
    background-size: 6px 12px;
}
